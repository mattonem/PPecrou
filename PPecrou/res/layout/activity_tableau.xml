	        <TableRow style="@style/frag2TableRow" >

	            <TextView
	                style="@style/frag2HeaderCol"
	                android:text="@string/eurocode" />

	            <TextView
	                style="@style/frag2Col"
	                android:text="@string/nothing" />

	            <TextView
	                style="@style/frag2Col"
	                android:text="@string/nothing" />
	        </TableRow>
	    </TableLayout>

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/tableLayout1"
	        android:text="@string/d0"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/inputD0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/textView1"
	        android:layout_toRightOf="@+id/textView1"
	        android:ems="10"
	        android:inputType="numberDecimal" >

		</EditText>
	    
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView1"
	        android:text="@string/t"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	     <EditText
	         android:id="@+id/inputT"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignLeft="@id/inputD0"
	         android:layout_alignTop="@+id/textView2"
	         android:ems="10"
	         android:inputType="numberDecimal" />

	    <TableLayout
	        android:id="@+id/TableLayout01"
	        style="@style/frag2TableLayout"
	        android:layout_alignLeft="@+id/textView2"
	        android:layout_below="@+id/inputT" >

